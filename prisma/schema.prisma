generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  uid                String    @unique
  name               String
  email              String    @unique
  photoURL           String?
  createdAt          DateTime  @default(now())
  lastLoginAt        DateTime
  createdProjects    Project[] @relation("CreatedProjects") // Relacionamento com projetos criados
  participatedProjects ProjectParticipation[] // Relacionamento com projetos participados
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime  @default(now())
  owner       User      @relation("CreatedProjects", fields: [ownerId], references: [id])
  ownerId     Int
  participants ProjectParticipation[] // Relacionamento com participações
  languages   String[] // Adicionado para armazenar as linguagens do projeto
  githubLink  String    // Link do repositório no GitHub
}

model ProjectParticipation {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int
  joinedAt   DateTime @default(now())
  isActive   Boolean  @default(false) // Indica se o participante está ativo ou inativo
}
